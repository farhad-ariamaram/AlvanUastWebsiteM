@page
@model AlvanUastWebsiteM.Pages.Customize.CustomizeModel
@{
    Layout = "_customize";
}

<style>
    body {
        background-color: #eee
    }

    .card {
        border: none;
        border-radius: 10px
    }

    .c-details span {
        font-weight: 300;
        font-size: 13px
    }

    .icon {
        width: 50px;
        height: 50px;
        background-color: #eee;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 39px
    }

    .badge span {
        background-color: #fffbec;
        width: 60px;
        height: 25px;
        padding-bottom: 3px;
        border-radius: 5px;
        display: flex;
        color: #fed85d;
        justify-content: center;
        align-items: center
    }

    .progress {
        height: 2px;
        border-radius: 10px
    }

        .progress div {
            background-color: #ccc
        }

    .text1 {
        font-size: 14px;
        font-weight: 600
    }

    .text2 {
        color: #a5aec0
    }

</style>

<div class="container mt-5 mb-3">
    <div class="row">

        @*news*@
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bi bi-newspaper"></i> </div>
                    </div>
                    <div class="badge"> <span>News</span> </div>
                </div>
                <div class="mt-5">
                    <h4 class="heading">
                        مدیریت اخبار 
                    </h4>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3 text-center"> <a href="/Customize/News"><span style="font-size:2rem" class="bi bi-arrow-left-circle"></span></a></div>
                    </div>
                </div>
            </div>
        </div>

        @*event*@
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bi bi-layout-text-window-reverse"></i> </div>
                    </div>
                    <div class="badge"> <span>Event</span> </div>
                </div>
                <div class="mt-5">
                    <h4 class="heading">
                        مدیریت رویداد ها
                    </h4>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3 text-center"> <a href="/Customize/Event"><span style="font-size:2rem" class="bi bi-arrow-left-circle"></span></a></div>
                    </div>
                </div>
            </div>
        </div>

        @*notice*@
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bi bi-bell"></i> </div>
                    </div>
                    <div class="badge"> <span>Notice</span> </div>
                </div>
                <div class="mt-5">
                    <h4 class="heading">
                        مدیریت اطلاعیه ها 
                    </h4>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3 text-center"> <a href="/Customize/Notice"><span style="font-size:2rem" class="bi bi-arrow-left-circle"></span></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @*menu*@
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bi bi-menu-up"></i> </div>
                    </div>
                    <div class="badge"> <span>Menu</span> </div>
                </div>
                <div class="mt-5">
                    <h4 class="heading">
                        مدیریت منو ها 
                    </h4>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3 text-center"> <a href="/Customize/Menu"><span style="font-size:2rem" class="bi bi-arrow-left-circle"></span></a></div>
                    </div>
                </div>
            </div>
        </div>

        @*timeline*@
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bi bi-calendar2-range"></i> </div>
                    </div>
                    <div class="badge"> <span>Timeline</span> </div>
                </div>
                <div class="mt-5">
                    <h4 class="heading">
                        مدیریت تقویم آموزشی 
                    </h4>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3 text-center"> <a href="/Customize/Timeline"><span style="font-size:2rem" class="bi bi-arrow-left-circle"></span></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>